<Window x:Class="TotoGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TotoGUI"
        mc:Ignorable="d"
        Title="Toto eredmeny ellenorzo" Height="450" Width="400">
    <StackPanel HorizontalAlignment="Left">
        <Label Margin="10">Kerem a fordulo eredmenyei [1,2, X]:</Label>
        <TextBox x:Name="txtResult" Width="280" Margin="10" Text="12X12X12X12X12" TextChanged="txtResult_TextChanged"></TextBox>
        <CheckBox x:Name="cbInvalidL" Margin="10" IsEnabled="False">Nem megfeleo a karakter szam (14)</CheckBox>
        <CheckBox x:Name="cbInvalidC" Margin="10" IsEnabled="False">Helytelen karakter az eredmenyekben ()</CheckBox>
        <Button x:Name="btnSave" Width="120" HorizontalAlignment="Left" Margin="10">Eredemenyek mentese</Button>
    </StackPanel>
</Window>
